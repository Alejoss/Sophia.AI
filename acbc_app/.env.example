# Django Secret Key
# Generate a secure secret key for production
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
ACADEMIA_BLOCKCHAIN_SKEY=django-insecure-development-key-123

# Environment
# Options: DEVELOPMENT, PRODUCTION
ENVIRONMENT=DEVELOPMENT

# Database Configuration
# These are used when ENVIRONMENT=PRODUCTION
# For development, docker-compose.yml provides defaults
DB_NAME=acbc_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432

# PostgreSQL Configuration (for docker-compose)
POSTGRES_DB=acbc_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Django Settings
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Production with HTTPS: set to true so JWT/cookie secure flags are enabled.
# USE_HTTPS=true

# Optional: extra CORS origins in production (comma-separated). Base list is in settings.
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Google OAuth Configuration (Optional)
# Required for social login functionality
# Get credentials from: https://console.cloud.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_SECRET_KEY=your-google-oauth-secret-key

# AWS Configuration (Production only)
# Required when using S3 for media/static file storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=academiablockchain
# AWS_S3_REGION_NAME=us-west-2

# Sentry Configuration (Optional)
# For error tracking in production
# SENTRY_DSN=your-sentry-dsn
